{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block head %}
        <meta charset="UTF-8">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.4.0/dist/axentix.min.css">
                <link rel="stylesheet" href="{{ asset('code/navbarcss.css') }}">
    
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
   {% endblock %}

{% block body %}
<div class="layout-sidenav">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<header>
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
       <a class="navbar-brand" href="http://127.0.0.1:8000/">
                <img src="/code/contratlab-logo-png.png" alt="ContractLab Logo"  style="height: 30%; width: 25%; margin-left: 20px;">
            </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/">Accueil</a>
                </li>
                {% if is_granted('ROLE_RESPONSABLE') %}
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/dashboard_responsable">Dashboard Responsable</a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/dashboard">Dashboard Admin</a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_GESTIONNAIRE') %}
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/dashboard_gestionnaire">Dashboard Gestionnaire</a>
                </li>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i> {{ app.user.nom }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="http://127.0.0.1:8000/profile">Profil</a>
                        <a class="dropdown-item" href="http://127.0.0.1:8000/logout">Déconnexion</a>
                    </div>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="http://127.0.0.1:8000/login">Connexion</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

    </header>
<br><br><br><br>
    <main>

  <section style="background-color: #eee;">
  <div class="container py-5">
   <h2> Profile </h2>
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="code/user.png" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{app.user.prenom}} {{app.user.nom}}</h5>
            <p class="text-muted mb-1">{{ app.user.roles|join(', ') }}</p><br>
            <div class="d-flex justify-content-center mb-2">
              <a type="button"  class="btn btn-primary" href="reset-password">reset password</a>
              <a type="button"  class="btn btn-outline-primary ms-1" href="http://127.0.0.1:8000/">contact</a>
            </div>
          </div>
        </div>

      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
          <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Prénom</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{app.user.prenom}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nom</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{app.user.nom}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{app.user.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Téléphone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{app.user.telephone}}</p>
              </div>
            </div>
            </div>
            <div class="row">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</main>

  <footer class="footer">
      <div class="footer__addr">
        <img class="img-footer"src="code/progress.png" style="width:150px;">
        <h2>Contact</h2>
        <address>5534 Tunis , Tunisia<br> <a class="footer__btn" href="#section2">Email Us</a></address>
      </div>
      <ul class="footer__nav">
        <li class="nav__item">
           <h2 class="nav__title">Réseaux sociaux</h2>
          <ul class="nav__ul">
            <li><a href="https://www.progress.com.tn/">Site web</a></li>
            <li><a href="https://www.facebook.com/ProgressengineeringTunisia">Facebook</a></li>
            <li><a href="https://tn.linkedin.com/company/progress-engineering">Linkedin</a></li>
         </ul>
        </li>
        <li class="nav__item">
          <h2 class="nav__title">Adresse</h2>
          <ul class="nav__ul">
            <li><a>Parc Technologique Elgazala</a></li>
            <li><a>Batiment i2 RDC</a></li>
            <li><a>Elgazala، Ariana 2088، TN</a></li>
          </ul>
        </li>
      </ul>
      <div class="legal"><p>&copy; 2024. All rights reserved.</p></div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/axentix@2.4.0/dist/axentix.min.js"></script>
    </div>


<style>

.navbar-brand img {
            height: 30%;
            width: 30%;
        }

        .navbar-nav .nav-link {
            white-space: nowrap;
            font-size: 15px; /* Increase font size */
            font-weight: bold; /* Make font bold */
        }
        .navbar-nav .nav-link:hover {
            color: #blue; /* Blue color on hover */
        }
        .navbar-nav .dropdown-menu {
            background-color: #f8f9fa;
        }

        .navbar-nav .dropdown-menu .dropdown-item:hover {
            background-color: #blue;
        }


.img-footer {
    width: 150px;
}
</style>
{% endblock %}

{% for contrat in contrats %}

    <form id="delete-form-{{ contrat.id }}" method="post" action="{{ path('app_contrat_delete', {'id': contrat.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
        <button class="btn btn-outline-secondary" onclick="deleteContrat({{ contrat.id }})">Supprimer</button>
    </form>
   
{% endfor %}

<script>
    function deleteContrat(id) {
        if (confirm('Are you sure you want to delete this item?')) {
            document.getElementById('delete-form-' + id).submit();
        }
    }
</script>
{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column; 
            justify-content: center; 
            align-items: center; 
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            font-weight: 500;
            line-height: 1.2;
            color: #1094DB;
            margin-top: 0; 
        }

        .alert {
            padding: 1rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: 0.25rem;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        small {
            font-size: 0.875rem;
        }

       .btn-primary {
    color: #fff;
    background-color: #1094DB;
    border-color: #1094DB;
    padding: 0.5rem 1rem; 
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out; 
}

    .btn-primary:hover {
        background-color: #0a7fc1; 
    }

        input[type="email"] {
            background-color: #f0f0f0; 
            border: 1px solid #ccc; 
            border-radius: 0.25rem; 
            padding: 0.5rem; 
            font-size: 1rem; 
            width: 100%; 
            box-sizing: border-box; 
            transition: border-color 0.3s ease-in-out; 
        }
  
        input[type="email"]:focus {
            border-color: #1094DB; 
        }

    </style>
{% endblock %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="form-control my-3" class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>
<br>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <br>
        <div>
            <small>
               Entrez votre adresse email et nous vous enverrons un
 lien pour réinitialiser votre mot de passe.
            </small>
        </div>
<br><br>
        <button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
